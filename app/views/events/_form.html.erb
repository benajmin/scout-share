<%= form_with scope: :event, url: events_path, local: true do |form| %>
  <%= form.label :title %></br>
  <%= form.text_field :title %></br>

  <%= form.label :cost %></br>
  $<%= form.number_field :cost %></br>

  <%= form.label :description%></br>
  <%= form.text_area :description %></br>

  <%= form.label :email %></br>
  <%= form.email_field :email %></br>

  <%= form.label :start %></br>
  <%= form.datetime_select :start %></br>

  <%= form.label :end %></br>
  <%= form.datetime_select :end %></br>

  <%= form.label :group_name %></br>
  <%= form.text_field :group_name, id: :event_group_name, data:{autocomplete_source: Group.order('LOWER(name)').map(&:name)} %>

  <p><%= form.submit %></p>

<% end %>
